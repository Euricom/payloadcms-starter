{
  "name": "payload-3-0-starter",
  "description": "A blank template to get started with Payload 3.0",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "generate:types": "payload generate:types",
    "viewEmails": "email dev --dir src/emails",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "docker:build": "docker build --network=host -t my-next-app .",
    "docker:run": "docker run --rm -it -p 3000:3000 my-next-app"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "3.0.0-beta.30",
    "@payloadcms/email-nodemailer": "^3.0.0-beta.30",
    "@payloadcms/next": "3.0.0-beta.30",
    "@payloadcms/plugin-cloud": "3.0.0-beta.30",
    "@payloadcms/richtext-lexical": "3.0.0-beta.30",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-email/components": "0.0.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "escape-html": "^1.0.3",
    "graphql": "^16.8.1",
    "lucide-react": "^0.373.0",
    "next": "^14.2.3",
    "next-themes": "^0.3.0",
    "nodemailer": "^6.9.13",
    "payload": "3.0.0-beta.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-email": "2.1.2",
    "react-hook-form": "^7.51.4",
    "sharp": "0.32.6",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@swc/core": "^1.4.17",
    "@tailwindcss/typography": "^0.5.12",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^20.11.25",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "resolutions": {
    "strip-ansi": "6.0.1"
  }
}
